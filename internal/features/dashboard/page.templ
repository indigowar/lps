templ tablePositions(data []domain.Position) {
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Level</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			for _, v := range data {
				@positionItem(v)
			}
		</tbody>
	</table>
}

templ positionItem(v domain.Position) {
	<tr>
		<td>{ v.ID.String() }</td>
		<td>{ v.Title }</td>
		<td>{ v.Level }</td>
		<td><button class="button is-link">Edit</button></td>
		<td><button class="button is-danger">Delete</button></td>
	</tr>
}
